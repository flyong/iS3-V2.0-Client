<UserControl x:Class="iS3.Desktop.RibbonMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ribbon="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon"
        xmlns:local="clr-namespace:iS3.Desktop"
        mc:Ignorable="d">
    <Grid>
        <ribbon:Ribbon x:Name="RibbonHolder" >
            <ribbon:Ribbon.ApplicationMenu>
                <ribbon:RibbonApplicationMenu SmallImageSource="Images\SmallIcon.jpg">
                    <ribbon:RibbonApplicationMenuItem Header="iS3简介"
                                                      x:Name="MenuItem2"
                                                      ImageSource="Images\LargeIcon.jpg"/>
                    <ribbon:RibbonApplicationMenuItem Header="联系我们"
                                                      x:Name="MenuItem3"
                                                      ImageSource="Images\LargeIcon.jpg"/>
                </ribbon:RibbonApplicationMenu>
            </ribbon:Ribbon.ApplicationMenu>
        
        </ribbon:Ribbon>
    </Grid>
</UserControl>
